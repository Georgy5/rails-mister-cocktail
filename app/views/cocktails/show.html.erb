<div class="container">
  <h1><%= @cocktail.name %></h1>

  <div>
    <h2>Ingredients:</h2>
    <% @cocktail.doses.each do |dose| %>
      <%= dose.description %> <%= dose.ingredient.name %><br>
    <% end %>
  </div>

  <p>
    <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail) %>
  </p>

  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 300, crop: :fill %>
  <% else  %>
    <%= cl_image_tag("h8fhlk6cfvtbjvai8u76.jpg",
      width: 225, height: 225, crop: :fill) %>
  <% end  %>

  <hr>

  <%= link_to 'Back', root_path %>
</div>